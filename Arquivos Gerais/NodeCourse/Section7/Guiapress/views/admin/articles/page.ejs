
<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>

<body>
<div class="container">
    <hr />
    <% result.articles.rows.forEach(article => { %> 
        <div class="card">
            <div class="card-header">
                 <h4><%= article.title %></h4> 
            </div>
            <div class="card-body">
                 <a href="/<%= article.slug %>" class="btn btn-success">Read this article</a>
            </div>
        </div>

    <% }) %>    

    <div class="row">
        <div class="col col-md-12">   

            <% if(result.page > 2 ) {%> 
                <a style="float:left" href="/admin/articles/paging/<% result.page - 1 %>"> <<< prev </a>
            <% } else if( <% if(result.page == 2) { %> 
                 <a style="float:left" href="/"> <<< </a>
            <% } %>   

            <% if(result.next) {%>    
                 <a style="float:right" href="/admin/articles/paging/<% result.page + 1 %>"> next >>> </a>
           <% } %>
        </div>
    </div>  

</div> 

</body>

